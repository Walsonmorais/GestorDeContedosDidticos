<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/extraColor"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_Teacher_Register">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/appBar"
        android:padding="5dp"
        android:background="@drawable/shape_retangle_start_activity">

    <EditText
        android:id="@+id/edit_name_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_name"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <EditText
        android:id="@+id/edit_email_account_teacher"
        android:layout_below="@id/edit_name_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_email_account"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <EditText
        android:id="@+id/edit_password_account_teacher"
        android:layout_below="@id/edit_email_account_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_password_account"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/edit_confirm_password_teacher"
        android:layout_below="@id/edit_password_account_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_edit_confirm_password"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />



    <RadioGroup
        android:id="@+id/rbt_group_teacher"
        android:layout_below="@id/edit_confirm_password_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/rbt_teacher"
            android:text="Docente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/auto_complete_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RadioButton
            android:id="@+id/rbt_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Estudante" />

        <AutoCompleteTextView
            android:id="@+id/auto_complete_student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </RadioGroup>


    <Button
        android:id="@+id/btn_save_account_teacher"
       android:layout_below="@id/rbt_group_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:background="@drawable/background_style_button"
        android:text="@string/button_save_account"
        android:textColor="@color/extraColor"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rectangle_login">

    <TextView
        android:id="@+id/text_login_teacher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18dp"
        android:layout_margin="10dp"
        android:textColor="@color/extraColor"
        android:gravity="center"
        android:textStyle="bold"
        android:text="JÃ¡ tem uma Conta? Log In..."/>

    </LinearLayout>

</RelativeLayout>