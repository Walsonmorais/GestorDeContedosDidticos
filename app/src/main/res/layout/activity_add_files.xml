<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/extraColor"
    android:layout_height="match_parent"
    tools:context=".Activity_Add_Files">




    <RelativeLayout
        android:id="@+id/relative_image"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_margin="14dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/add_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="4dp"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/text_notification_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_image"
            android:singleLine="true"
            android:background="@drawable/shape_retangle_start_activity"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textStyle="italic" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_image"
        android:layout_marginTop="12dp"
        android:padding="4dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/Txt_InputSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_add_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ãrea de Estudo:"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/Txt_InputTheme"
            android:layout_below="@id/Txt_InputSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/edit_add_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tema:"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/Txt_InputCourse"
            android:layout_below="@id/Txt_InputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_add_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_add_theme"
                android:hint="Curso:"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/Txt_InputYear"
            android:layout_width="match_parent"
            android:layout_below="@id/Txt_InputCourse"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_add_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ano:"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout"
        android:layout_marginTop="12dp">


        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_style_button"
            android:text="Postar "
            android:padding="4dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/extraColor"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_choose_file"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    </RelativeLayout>


</RelativeLayout>