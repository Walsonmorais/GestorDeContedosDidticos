<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:background="@drawable/shape_rectangle_profile">

        <RelativeLayout
            android:id="@+id/relative1_layout_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_save"
                    android:id="@+id/icon_save" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_username"
                android:layout_margin="10dp"
                android:hint="USERNAME"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative_imageView"
            android:layout_width="wrap_content"
            android:layout_below="@+id/relative1_layout_first"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView_item_post"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/text_notification_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView_item_post"
                android:singleLine="true"
                android:background="@drawable/shape_retangle_start_activity"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                android:layout_marginBottom="6dp"
                android:layout_centerHorizontal="true"
                android:textStyle="italic" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_imageView"
            android:layout_margin="4dp">



            <TextView
                android:id="@+id/hint_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:text="Tema:  " />


            <TextView
                android:id="@+id/textView_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_toEndOf="@id/hint_theme"
                android:textSize="18dp"
                android:maxLines="1"
                android:textColor="@color/colorAccent" />


            <TextView
                android:id="@+id/hint_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textSize="18dp"
                android:layout_below="@id/hint_theme"
                android:textColor="@color/colorBlack"
                android:text="Curso:  " />


            <TextView
                android:id="@+id/textView_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_below="@id/textView_theme"
                android:layout_toEndOf="@id/hint_course"
                android:textSize="18dp"
                android:maxLines="1"
                android:textColor="@color/colorAccent" />




        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>