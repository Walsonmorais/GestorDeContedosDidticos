<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <EditText
        android:id="@+id/edit_recover_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o seu Email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_sent_email_recover_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_recover_password"
        android:text="Enviar"
        android:background="@drawable/background_style_button"/>

</RelativeLayout>